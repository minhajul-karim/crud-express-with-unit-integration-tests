<section class="container-fluid customer-table mt-3">
    <div class="table-header d-flex justify-content-between align-items-center">
        <p class="lead">Customers</p>
        <a href="/customers/add" class="btn btn-outline-primary">Add new</a>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{phone}}</td>
                        <td class="d-flex">
                            <form
                                class="d-flex"
                                method="POST"
                                action="/customers/{{id}}/update"
                            >
                                <button
                                    class="btn btn-outline-info me-2"
                                    type="submit"
                                >Edit</button>
                            </form>
                            <form
                                class="d-flex"
                                method="POST"
                                action="/customers/{{id}}/remove"
                            >
                                <button
                                    class="btn btn-outline-danger"
                                    type="submit"
                                >Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>